using System;
using System.Runtime.CompilerServices;

namespace Program
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Char Yumeko = new Char(1565, "Yumeko", "Hammer");
            Yumeko.Intro();

            Char Hattori = new Char(587, "Hattori", "Katana");
            Hattori.Intro();

            Char Kaya = new Char(1872, "Kaya", "Spear");
            Kaya.Intro();
        }
    }

    public class Char
    {
        private string Name { get; set; }

        private string Weapon { get; set; }

        private double Kills { get; set; }

        public Char() { }

        public Char(double kills)
        {
            Kills = kills;
        }

        public Char(double kills, string name) : this(kills)
        {
            Name = name;
        }

        public Char(double kills, string name, string weapon) : this(kills, name)
        {
            Weapon = weapon;
        }

        public void Intro()
        {
            Console.WriteLine($"{Name} - {Weapon} - {Kills} kills.");
        }
    }
}
